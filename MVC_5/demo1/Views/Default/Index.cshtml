@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Jquery/jquery.js"></script>
    <style>
        .span {
            color: red;
        }

        .header {
            display: none;
        }
    </style>
</head>
<body>
    <div>
        <form>
            <p>用户名：</p><input type="text" name="UserId" id="UserId" onblur="verify()" /><span class="span header" id="ShowID">请输入账号！</span>
            <p>密码：</p><input type="text" name="UserPwd" id="UserPwd" onblur="verify()" /><span class="span header" id="ShowPwd">请输入密码！</span>
            <button type="submit">提交</button>
        </form>
    </div>
    <script>
        function verify() {
            var UserId = $("#UserId").val();
            var UserPwd = $("#UserPwd").val();
            if (UserId == "") {
                $("#ShowID").removeClass("header");
                return false;
            } else {
                $("#ShowID").addClass("header");
            }
            if (UserPwd == "") {
                $("#ShowPwd").removeClass("header");
                return false;
            } else {
                $("#ShowID").addClass("header  ");
            }
        }
        $(document).ready(function () {
            // $("form").bind("submit", verify())
        });
    </script>
</body>
</html>